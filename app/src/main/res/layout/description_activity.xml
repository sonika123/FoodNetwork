<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">
<LinearLayout
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DESCRIPTION"
        android:textColor="@color/colorAccent"
        android:padding="10dp"
        android:textSize="20sp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/desc_image" />
    <TextView
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description of food"
        android:id="@+id/desc_description"
        android:textStyle="italic"
        android:textColor="#fa0707"/>

    <Button
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:background="@drawable/shape_button"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call us for order"
        android:id="@+id/desc_btncall"
        />

    <Button
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order via msg or email"
        android:background="#6eed34"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:id="@+id/desc_btnmsg_email"/>




</LinearLayout>
    </ScrollView>